<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
	<managed-bean>
		<managed-bean-name>loginBean</managed-bean-name>
		<managed-bean-class>edu.ncsu.beans.LoginBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>registrationBean</managed-bean-name>
		<managed-bean-class>edu.ncsu.beans.RegistrationBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>navBean</managed-bean-name>
		<managed-bean-class>edu.ncsu.beans.NavigationBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>themeSwitcherBean</managed-bean-name>
		<managed-bean-class>edu.ncsu.beans.ThemeSwitcherBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>resumeTemplateBean</managed-bean-name>
		<managed-bean-class>edu.ncsu.beans.ResumeTemplateBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
        <from-view-id>/login.xhtml</from-view-id>
        <navigation-case>
        	<from-action>#{loginBean.login}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/home.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
	<navigation-rule>
		<display-name>WEB-INF/templates/menubar.xhtml</display-name>
		<from-view-id>/WEB-INF/templates/menubar.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>settings</from-outcome>
			<to-view-id>/WEB-INF/auth/settings.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
        <from-view-id>/WEB-INF/auth/latex_templates/resumes/display_resume_0.xhtml</from-view-id>
        <navigation-case>
        	<from-action>#{resumeTemplateBean.generate}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/home.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

</faces-config>
